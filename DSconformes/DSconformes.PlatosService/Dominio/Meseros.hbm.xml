<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns ="urn:nhibernate-mapping-2.2"
                   assembly ="DSconformes.PlatosService"
                   namespace ="DSconformes.PlatosService.Dominio"
                   default-lazy="false">

  <class name ="Meseros" table="t_mesero">
    <id name="id_mesero" column="id_mesero">
      <generator class="increment"  />
    </id>
    <property name="dni" column="dni" />
    <property name="nombre" column="nombre" />
    <many-to-one name ="mesa" column="id_mesa" />
    <property name="sexo" column="sexo" />
    <property name="edad" column="edad" />
    <property name="h_entrada" column="h_entrada" type="TimeAsTimeSpan"/>
    <property name="h_salida" column="h_salida" type="TimeAsTimeSpan"/>
    
  </class>
</hibernate-mapping>

